<Application x:Class="Actualizar.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Actualizar" xmlns:fa="http://schemas.fontawesome.io/icons/"
             StartupUri="Vista/ControlUsuario/Welcom.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Temas/TemaClaro.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!--Aqui irian los estilos que desees-->
            <Style TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="borderbutton" Background="{DynamicResource ButtonColor1}" CornerRadius="15" BorderBrush="{DynamicResource BorderColor1}"
                    BorderThickness="1">
                                <ContentPresenter x:Name="Contentbutton" HorizontalAlignment="Center"
                                  VerticalAlignment="Center" TextElement.Foreground="{DynamicResource Text1}"/>
                            </Border>

                            <!-- Estados visuales -->
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="borderbutton" Property="Background" Value="LightBlue"/>
                                    <Setter TargetName="Contentbutton" Property="TextElement.Foreground" Value="{DynamicResource Text3}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="borderbutton" Property="Background" Value="{DynamicResource ButtonColorPressed1}"/>
                                    <Setter TargetName="borderbutton" Property="BorderBrush" Value="{DynamicResource BorderColor2}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="CheckBox">
                <Setter Property="Foreground" Value="{DynamicResource Text1}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <Grid VerticalAlignment="Center" Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="Box" Width="18" Height="18" CornerRadius="4" BorderThickness="2" BorderBrush="{DynamicResource BorderColor1}" Background="{DynamicResource BackgroundControlColor1}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <Path x:Name="CheckMark" Grid.Column="0" Data="M2,9 L7,14 16,4" Stroke="#FFFFFF" StrokeThickness="2.5" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Visibility="Collapsed" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <ContentPresenter Grid.Column="2" VerticalAlignment="Center" RecognizesAccessKey="True" ContentSource="Content"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Box" Property="BorderBrush" Value="#9AAFD4"/>
                                </Trigger>

                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Box" Property="Background" Value="#4A90E2"/>
                                    <Setter TargetName="Box" Property="BorderBrush" Value="{DynamicResource BorderColor1}"/>
                                    <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                </Trigger>

                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="Foreground" Value="{DynamicResource Text2}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <!-- Cuerpo del ComboBox -->
                                <Border x:Name="Border" Background="{DynamicResource BackgroundControlColor1}" BorderBrush="{DynamicResource BackgroundControlColor3}" BorderThickness="3" CornerRadius="15" SnapsToDevicePixels="True"/>

                                <!-- Botón desplegable -->
                                <ToggleButton Grid.Column="1" Focusable="False" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" Width="{TemplateBinding ActualWidth}">
                                    <Grid Width="{TemplateBinding ActualWidth}">
                                        <Grid Width="{TemplateBinding ActualWidth}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="35"/>
                                                <ColumnDefinition Width="15"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Contenido seleccionado -->
                                            <ContentPresenter Grid.Column="0" Margin="8,3,0,3" VerticalAlignment="Center" HorizontalAlignment="Left" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>
                                        </Grid>
                                        <Grid Width="{TemplateBinding ActualWidth}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="35"/>
                                                <ColumnDefinition Width="15"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Contenido seleccionado -->
                                            <fa:ImageAwesome Grid.Column="2" Icon="CaretDown" Foreground="{DynamicResource Text2}" />
                                        </Grid>
                                    </Grid>
                                </ToggleButton>

                                <!-- Popup de la lista -->
                                <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                    <Border Background="{DynamicResource BackgroundControlColor1}" BorderBrush="{DynamicResource BackgroundControlColor2}" BorderThickness="1" CornerRadius="5" Width="{TemplateBinding ActualWidth}" Padding="2">
                                        <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <!-- Cuando el ComboBox está deshabilitado -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.8"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>
