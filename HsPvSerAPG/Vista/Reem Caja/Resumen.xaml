<Window x:Class="HsPvSerAPG.Vista.Reem_Caja.Resumen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HsPvSerAPG.Vista.Reem_Caja"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow" Icon="/Utils/Imagenes/logo_pequeño.png"
        Title="Resumen" Height="450" Width="800" Background="{DynamicResource GradientBackground}">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Fecha : " Margin="10,0" FontSize="30" FontFamily="Bahnschrift Condensed"/>
                <DatePicker Grid.Column="1" FontSize="20">
                    <DatePicker.Resources>
                        <Style TargetType="Button" x:Key="DatePickerButtonStyle" >
                            <Setter Property="Content" Value="📅"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="Background" Value="{DynamicResource TextBox}"/>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
                <TextBlock Grid.Column="2" Text="Caja : " Margin="10,0" FontSize="30" FontFamily="Bahnschrift Condensed"/>
                <ComboBox Grid.Column="3" x:Name="CBTurnos" Height="35" VerticalAlignment="Top"/>
            </Grid>
            <DataGrid Grid.Row="1" Margin="10">

            </DataGrid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Width="120" Height="100" Margin="5,10" Background="{DynamicResource BtnBuscarBackground}" BorderThickness="0">
                <StackPanel>
                    <fa:ImageAwesome Icon="Search" Width="50" Foreground="{DynamicResource BtnBuscarBorder}"/>
                    <TextBlock Text="Buscar" HorizontalAlignment="Center" FontFamily="Bahnschrift Condensed" Foreground="{DynamicResource BtnBuscarBorder}" FontSize="25" Margin="0,5,0,0"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="1" Width="120" Height="100" Margin="5,10" Background="{DynamicResource BtnReenviarBackground}" BorderThickness="0">
                <StackPanel>
                    <fa:ImageAwesome Icon="Print" Width="50" Foreground="{DynamicResource BtnReenviarBorder}"/>
                    <TextBlock Text="Reenviar" HorizontalAlignment="Center" FontFamily="Bahnschrift Condensed" Foreground="{DynamicResource BtnReenviarBorder}" FontSize="25" Margin="0,5,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="2" Width="120" Height="100" Margin="5,10" Background="{DynamicResource BtnSalirBackground}" BorderThickness="0" Click="Click_BtnSalir">
                <StackPanel>
                    <fa:ImageAwesome Icon="TimesCircle" Width="50" Foreground="{DynamicResource BtnSalirBorder}"/>
                    <TextBlock Text="Salir" HorizontalAlignment="Center" FontFamily="Bahnschrift Condensed" Foreground="{DynamicResource BtnSalirBorder}" FontSize="25" Margin="0,5,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

        </Grid>
    </Grid>
</Window>
