<Window x:Class="HsPvSerAPG.Vista.Reenviar.Anticipo.AppAnticipo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HsPvSerAPG.Vista.Reenviar.Anticipo"
        mc:Ignorable="d"
        Title="Aplicación de Anticipo" Height="750" Width="650" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow" ResizeMode="NoResize" Background="{DynamicResource GradientBackground}" Icon="/Utils/Imagenes/logo.png">
    <Grid Margin="10"> 
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock Text="Anticipo NP: " FontSize="20" FontFamily="Bahnschrift Condensed" VerticalAlignment="Center"/>
                <TextBox x:Name="TBTipDoc" IsReadOnly="True" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="2" Width="80" FontSize="24" FontFamily="Bahnschrift Condensed"/>
                <TextBox x:Name="TBNumDoc" IsReadOnly="True" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="2" Width="160" FontSize="24" Margin="10,0" FontFamily="Bahnschrift Condensed"/>
                <Button Background="{DynamicResource BtnCurrentBackground}" BorderBrush="{DynamicResource BtnCurrentBorder}" Width="30" Click="BtnClick_Emision">
                    <TextBlock Foreground="{DynamicResource BtnCurrentBorder}" Text="..." FontSize="20"/>
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="T/M: " FontSize="25" FontWeight="Bold" FontFamily="Bahnschrift Condensed" Foreground="{DynamicResource Text}"/>
                <Border CornerRadius="10" Width="120" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="2">
                    <TextBlock x:Name="CB_TM" Margin="10,0" Background="Transparent" FontSize="23" TextAlignment="Center" FontFamily="Bahnschrift Condensed"/>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Saldo de Anticipo" Foreground="{DynamicResource Text}" TextAlignment="Center" FontFamily="Bahnschrift Condensed" FontSize="40"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="10,0">
                    <TextBlock Text="S/." FontSize="30" FontFamily="Bahnschrift Condensed" TextAlignment="Center"/>
                    <TextBox x:Name="TBSaldoSOLES" Background="{DynamicResource TBTotales}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="4" FontSize="35" IsReadOnly="True" TextAlignment="Right"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="10,0">
                    <TextBlock Text="US$" FontSize="30" FontFamily="Bahnschrift Condensed" TextAlignment="Center"/>
                    <TextBox x:Name="TBSaldoDOLARES" Background="{DynamicResource BtnPagoBackground}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="4" FontSize="35" IsReadOnly="True" TextAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Saldo del Documento a pagar" Foreground="{DynamicResource Text}" TextAlignment="Center" FontFamily="Bahnschrift Condensed" FontSize="40"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="10,0">
                    <TextBlock Text="S/." FontSize="30" FontFamily="Bahnschrift Condensed" TextAlignment="Center"/>
                    <TextBox x:Name="TBSOLESdocumento" Background="{DynamicResource TBTotales}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="4" FontSize="35" IsReadOnly="True" TextAlignment="Right"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="10,0">
                    <TextBlock Text="US$" FontSize="30" FontFamily="Bahnschrift Condensed" TextAlignment="Center"/>
                    <TextBox x:Name="TBDOLARESdocumento" Background="{DynamicResource BtnPagoBackground}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="4" FontSize="35" IsReadOnly="True" TextAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="3" Margin="0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Importe a Aplicar" Foreground="{DynamicResource Text}" TextAlignment="Center" FontFamily="Bahnschrift Condensed" FontSize="40"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="10,0">
                    <TextBlock Text="S/." FontSize="30" FontFamily="Bahnschrift Condensed" TextAlignment="Center"/>
                    <TextBox x:Name="TBImporteSOLES" Background="{DynamicResource TBTotales}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="4" FontSize="35" TextAlignment="Right" KeyDown="TBImporteSOLES_KeyDown" PreviewTextInput="TBTipCam_PreviewTextInput" TextChanged="TBImporteSOLES_TextChanged"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="10,0">
                    <TextBlock Text="US$" FontSize="30" FontFamily="Bahnschrift Condensed" TextAlignment="Center"/>
                    <TextBox x:Name="TBImporteDOLARES" Background="{DynamicResource BtnPagoBackground}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="4" FontSize="35" TextAlignment="Right" KeyDown="TBImporteDOLARES_KeyDown" PreviewTextInput="TBTipCam_PreviewTextInput" TextChanged="TBImporteDOLARES_TextChanged"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="4" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"  Background="{DynamicResource BtnPagoBackground}" BorderBrush="{DynamicResource BtnPagoBorder}" BorderThickness="3" Margin="5,0" Click="BtnClick_Guardar">
                    <StackPanel>
                        <Grid>
                            <fa:ImageAwesome Icon="Circle" Width="60" Height="60" Foreground="{DynamicResource BtnPagoBorder}" HorizontalAlignment="Center"/>
                            <fa:ImageAwesome Icon="Check" Width="30" Height="30" Foreground="{DynamicResource BtnPagoBackground}" HorizontalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="Guardar" FontSize="35" FontFamily="Bahnschrift Condensed" Foreground="{DynamicResource BtnPagoBorder}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1" Background="{DynamicResource BtnSalirBackground}" BorderBrush="{DynamicResource BtnSalirBorder}" BorderThickness="3" Margin="5,0" Click="Click_BtnSalir">
                    <StackPanel>
                        <fa:ImageAwesome Icon="TimesCircle" Width="60" Height="60" Foreground="{DynamicResource BtnSalirBorder}" Margin="0,5"/>
                        <TextBlock Text="Salir" FontSize="35" Foreground="{DynamicResource BtnSalirBorder}" VerticalAlignment="Center" TextAlignment="Center"  FontFamily="Bahnschrift Condensed"/>
                    </StackPanel>
                </Button>
            </Grid>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="T/C: " FontSize="35" FontFamily="Bahnschrift Condensed" HorizontalAlignment="Center"/>
                <TextBox x:Name="TBTipCam" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="4" Width="180" FontSize="35" Height="50" VerticalAlignment="Top" KeyDown="TBTipCam_KeyDown" PreviewTextInput="TBTipCam_PreviewTextInput" FontFamily="Bahnschrift Condensed" TextAlignment="Right"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
