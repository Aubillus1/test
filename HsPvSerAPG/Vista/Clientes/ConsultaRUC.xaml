<Window x:Class="HsPvSerAPG.ConsultaRUC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HsPvSerAPG"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="SingleBorderWindow"
        Title="Consulta RUC" Height="730" Width="650" WindowStartupLocation="CenterScreen" Icon="/Utils/Imagenes/logo_pequeño.png" Background="{DynamicResource GradientBackground}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Foreground="{DynamicResource Text}" Grid.Column="0" Text="RUC: " FontSize="24" FontWeight="Bold" HorizontalAlignment="Right" Margin="10, 18,0,10"/>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="0,10,40,20" Width="510" HorizontalAlignment="Left">
                <Border CornerRadius="15" Width="488" Background="{DynamicResource TextBox}" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}" Height="30" Margin="0,10">
                    <TextBox FontSize="20" Margin="10,0" x:Name="txtRUC" KeyDown="txtRUC_KeyDown" Background="Transparent" BorderThickness="0"/>
                </Border>
                <Button Height="50" FontSize="16" Background="{DynamicResource BtnConsultarBackground}" FontWeight="Bold" Width="488" Click="btn_ConsultaSunat_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Database" Foreground="{DynamicResource BtnConsultarBorder}" Height="45" Margin="10,0"/>
                        <TextBlock Text="Realizar Consulta" Foreground="{DynamicResource BtnConsultarBorder}" FontSize="30" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Height="50" FontSize="20"
        Background="{DynamicResource BtnProductosPrincipalBackground}" 
        Margin="2" 
        FontWeight="Bold" 
        BorderThickness="0" 
        Click="Btn_Grabar">
                <TextBlock Text="Grabar" 
               Foreground="{DynamicResource BtnProductosPrincipalBorder}" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"/>
            </Button>

            <Button Grid.Column="1" Height="50" FontSize="20"
        Background="{DynamicResource BtnCurrentBackground}" 
        Margin="2" 
        FontWeight="Bold" 
        BorderThickness="0" 
        Click="Btn_Grabar">
                <TextBlock Text="Actualizar" 
               Foreground="{DynamicResource BtnCurrentBorder}" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"/>
            </Button>

            <Button Grid.Column="2" Height="50" FontSize="20"
        Background="{DynamicResource BtnSalirBackground}" 
        Margin="2" 
        FontWeight="Bold" 
        BorderThickness="0" 
        Click="Button_Click">
                <TextBlock Text="Salir" 
               Foreground="{DynamicResource BtnSalirBorder}" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"/>
            </Button>

        </Grid>
        <Grid Grid.Row="2">
            <StackPanel>
                <StackPanel Margin="10, 0, 10, 0" Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource Text}" FontSize="20">Razon Social</TextBlock>
                    <Border CornerRadius="15" Background="{DynamicResource TextBox}" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}" Height="30" >
                        <TextBox Height="25" FontSize="18" x:Name="txtRazonSocial" Margin="13,0" Background="Transparent" BorderThickness="0"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="10, 10, 10, 0" Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource Text}" FontSize="20">Dirección del Domicilio Fiscal</TextBlock>
                    <Border CornerRadius="15"  Background="{DynamicResource TextBox}" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}" Height="30">
                        <TextBox Height="25" FontSize="18" x:Name="txtDireccion" Background="Transparent" BorderThickness="0" Margin="13,0"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,50,0">
                <TextBlock Text="Tel. Fijo" Foreground="{DynamicResource Text}" FontWeight="Bold" FontSize="20"/>
                <Border CornerRadius="15" Background="{DynamicResource TextBox}" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}" Height="30" >
                    <TextBox Height="25" FontSize="18" x:Name="txtTelefonoFijo" Margin="12,0" Background="Transparent" BorderThickness="0"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="50,0,0,0">
                <TextBlock Text="Tel. Celular" Foreground="{DynamicResource Text}" FontWeight="Bold" FontSize="20"/>
                <Border CornerRadius="15" Background="{DynamicResource TextBox}" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}" Height="30" >
                    <TextBox Height="25" FontSize="18" x:Name="txtTelefonoCelular" Margin="12,0" Background="Transparent" BorderThickness="0"/>
                </Border>
            </StackPanel>
        </Grid>


        <Grid Grid.Row="4">
            <StackPanel>
                <StackPanel Margin="10, 0, 10, 0" Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource Text}" FontSize="20">WhatsApp</TextBlock>
                    <Border CornerRadius="15" Background="{DynamicResource TextBox}" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}" Height="30" >
                        <TextBox Height="25" FontSize="18" x:Name="txtWhatsApp" Background="Transparent" BorderThickness="0" Margin="12,0"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="10, 10, 10, 0" Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource Text}" FontSize="20">Correo Electrónico</TextBlock>
                    <Border CornerRadius="15" Background="{DynamicResource TextBox}" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}" Height="30" >
                        <TextBox Height="25" FontSize="18" x:Name="txtCorreoElectronico" Margin="12,0" Background="Transparent" BorderThickness="0"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="10, 10, 10, 0" Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource Text}" FontSize="20">Estado del Contribuyente</TextBlock>
                    <Border CornerRadius="15" Background="{DynamicResource TextBox}" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}" Height="30">
                        <TextBox Height="25" FontSize="18" x:Name="txtEstadoContribuyente" Margin="12,0" Background="Transparent" BorderThickness="0"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="10, 10, 10, 0" Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource Text}" FontSize="20">Condición del Contribuyente</TextBlock>
                    <Border CornerRadius="15" Background="{DynamicResource TextBox}" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}" Height="30">
                        <TextBox Height="25" FontSize="18" x:Name="txtCondicionContribuyente" Margin="12,0" Background="Transparent" BorderThickness="0"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
