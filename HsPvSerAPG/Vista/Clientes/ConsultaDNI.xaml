<Window x:Class="HsPvSerAPG.ConsultaDNI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:HsPvSerAPG"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="SingleBorderWindow"
        Title="Consulta DNI" Height="560" Width="650" WindowStartupLocation="CenterScreen"
        Icon="/Utils/Imagenes/logo_pequeño.png" Background="{DynamicResource LinearBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Fila 0: Ingreso de DNI -->
        <Grid Grid.Row="0" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <TextBlock Text="DNI: " FontSize="24" FontWeight="Bold" Margin="10, 0" Foreground="{DynamicResource Text}"/>
                <Border CornerRadius="15" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" Width="200">
                    <TextBox x:Name="document_number" FontSize="20" Background="Transparent" Margin="10,0" BorderThickness="0" KeyDown="document_number_KeyDown" Foreground="{DynamicResource Text}"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Fila 1: Botón de consulta -->
        <Button x:Name="btn_ConsultaReniec" Grid.Row="1" Margin="70,0,70,20"
                Foreground="{DynamicResource BtnConsultarBorder}" Height="60" FontSize="40"
                Background="{DynamicResource BtnConsultarBackground}" FontWeight="Bold" BorderThickness="0"
                Click="btn_ConsultaReniec_Click">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="Database" Foreground="{DynamicResource BtnConsultarBorder}" Height="45" Margin="10,0"/>
                <TextBlock Text="Realizar Consulta" Foreground="{DynamicResource BtnConsultarBorder}"/>
            </StackPanel>
        </Button>

        <!-- Fila 2: Datos personales -->
        <StackPanel Grid.Row="2">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Apellido Paterno -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5,0">
                    <TextBlock Text="Apellido Paterno" FontWeight="Bold" Margin="0,5" VerticalAlignment="Center" Foreground="{DynamicResource Text}"/>
                    <Border CornerRadius="12" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" Height="25">
                        <TextBox x:Name="first_last_name" Background="Transparent" BorderThickness="0" Margin="10,0" FontSize="18" Foreground="{DynamicResource Text}"/>
                    </Border>
                </StackPanel>

                <!-- Apellido Materno -->
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5,0">
                    <TextBlock Text="Apellido Materno" FontWeight="Bold" Margin="0,5" VerticalAlignment="Center" Foreground="{DynamicResource Text}"/>
                    <Border CornerRadius="12" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" Height="25">
                        <TextBox x:Name="second_last_name" Background="Transparent" Margin="10,0" BorderThickness="0" FontSize="18" Foreground="{DynamicResource Text}"/>
                    </Border>
                </StackPanel>

                <!-- Nombres -->
                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="5,0">
                    <TextBlock Text="Nombres" FontWeight="Bold" Margin="0,5" VerticalAlignment="Center" Foreground="{DynamicResource Text}"/>
                    <Border CornerRadius="10" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" Height="25">
                        <TextBox x:Name="first_name" Background="Transparent" BorderThickness="0" Margin="10,0" FontSize="18" Foreground="{DynamicResource Text}"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Dirección -->
            <StackPanel Margin="10,0,10,0" Orientation="Vertical">
                <TextBlock FontWeight="Bold" Margin="0,5" Foreground="{DynamicResource Text}">Dirección</TextBlock>
                <Border CornerRadius="12" Height="25" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1">
                    <TextBox x:Name="txtDireccion" Background="Transparent" BorderThickness="0" Margin="10,0" FontSize="18" Foreground="{DynamicResource Text}"/>
                </Border>
            </StackPanel>

            <!-- Teléfonos -->
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,50,0">
                    <TextBlock Text="Tel. Fijo" FontWeight="Bold" Margin="0,5" Foreground="{DynamicResource Text}"/>
                    <Border CornerRadius="12" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" Height="25">
                        <TextBox x:Name="txtTelefonoFijo" Margin="10,0" Background="Transparent" BorderThickness="0" FontSize="18" Foreground="{DynamicResource Text}"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="50,0,0,0">
                    <TextBlock Text="Tel. Celular" FontWeight="Bold" Margin="0,5" Foreground="{DynamicResource Text}"/>
                    <Border CornerRadius="12" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" Height="25">
                        <TextBox x:Name="txtTelefonoCelular" Background="Transparent" BorderThickness="0" Margin="10,0" FontSize="18" Foreground="{DynamicResource Text}"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- WhatsApp -->
            <StackPanel Margin="10,0,10,0" Orientation="Vertical">
                <TextBlock FontWeight="Bold" Margin="0,5" Foreground="{DynamicResource Text}">WhatsApp</TextBlock>
                <Border CornerRadius="12" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" Height="25">
                    <TextBox x:Name="txtWhatsApp" Margin="10,0" Background="Transparent" BorderThickness="0" FontSize="18" Foreground="{DynamicResource Text}"/>
                </Border>
            </StackPanel>

            <!-- Correo -->
            <StackPanel Margin="10,10,10,0" Orientation="Vertical">
                <TextBlock FontWeight="Bold" Foreground="{DynamicResource Text}">Correo Electrónico</TextBlock>
                <Border CornerRadius="12" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" Height="25">
                    <TextBox x:Name="txtCorreo" BorderThickness="0" Background="Transparent" Margin="10,0" FontSize="18" Foreground="{DynamicResource Text}"/>
                </Border>
            </StackPanel>
        </StackPanel>

        <!-- Fila 3: Botones inferiores -->
        <StackPanel Grid.Row="3" Margin="0,5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="150" Height="50" Background="{DynamicResource BtnProductosPrincipalBackground}" 
        Margin="10" BorderThickness="0" Click="Btn_Grabar">
                <TextBlock Text="Grabar" 
               FontSize="20" 
               FontWeight="Bold" 
               Foreground="{DynamicResource BtnProductosPrincipalBorder}" 
               TextAlignment="Center" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"/>
            </Button>

            <Button Width="150" Height="50" Background="{DynamicResource BtnCurrentBackground}" 
        Margin="10" BorderThickness="0" Click="Btn_Grabar">
                <TextBlock Text="Actualizar" 
               FontSize="20" 
               FontWeight="Bold" 
               Foreground="{DynamicResource BtnCurrentBorder}" 
               TextAlignment="Center" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"/>
            </Button>

            <Button Width="150" Height="50" Background="{DynamicResource BtnSalirBackground}" 
        Margin="10" BorderThickness="0" Click="Btn_Salir">
                <TextBlock Text="Salir" 
               FontSize="20" 
               FontWeight="Bold" 
               Foreground="{DynamicResource BtnSalirBorder}" 
               TextAlignment="Center" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
