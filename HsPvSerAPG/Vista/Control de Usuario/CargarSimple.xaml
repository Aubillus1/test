<UserControl x:Class="HsPvSerAPG.Vista.Control_de_Usuario.CargarSimple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HsPvSerAPG.Vista.Control_de_Usuario"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             Width="50" Height="50" Background="Transparent">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Ellipse Width="8" Height="8" Fill="{DynamicResource Text}" Margin="2" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TranslateTransform x:Name="Dot1"/>
            </Ellipse.RenderTransform>
        </Ellipse>

        <Ellipse Width="8" Height="8" Fill="{DynamicResource Text}" Margin="2" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TranslateTransform x:Name="Dot2"/>
            </Ellipse.RenderTransform>
        </Ellipse>

        <Ellipse Width="8" Height="8" Fill="{DynamicResource Text}" Margin="2" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TranslateTransform x:Name="Dot3"/>
            </Ellipse.RenderTransform>
        </Ellipse>

        <StackPanel.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                        <DoubleAnimation Storyboard.TargetName="Dot1"
                                     Storyboard.TargetProperty="Y"
                                     From="0" To="-10"
                                     Duration="0:0:0.4"
                                     AutoReverse="True"
                                     BeginTime="0:0:0"/>
                        <DoubleAnimation Storyboard.TargetName="Dot2"
                                     Storyboard.TargetProperty="Y"
                                     From="0" To="-10"
                                     Duration="0:0:0.4"
                                     AutoReverse="True"
                                     BeginTime="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="Dot3"
                                     Storyboard.TargetProperty="Y"
                                     From="0" To="-10"
                                     Duration="0:0:0.4"
                                     AutoReverse="True"
                                     BeginTime="0:0:0.4"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </StackPanel.Triggers>
    </StackPanel>

</UserControl>
