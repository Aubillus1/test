<UserControl x:Class="HsPvSerAPG.Vista.Control_de_Usuario.CargarActualizando"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HsPvSerAPG.Vista.Control_de_Usuario"
             mc:Ignorable="d" 
             Height="120" Width="120">
    <Grid Background="#80000000">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="8">
                <Ellipse Width="15" Height="15" Fill="DeepSkyBlue" Margin="2" RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Dot1"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Ellipse Width="15" Height="15" Fill="DeepSkyBlue" Margin="2" RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Dot2"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Ellipse Width="15" Height="15" Fill="DeepSkyBlue" Margin="2" RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Dot3"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </StackPanel>
            <TextBlock Text="Actualizando..."
       Foreground="White"
       FontWeight="Bold"
       FontSize="14"
       HorizontalAlignment="Center"
       Margin="0,5"/>

            <StackPanel.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetName="Dot1"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-15"
                             Duration="0:0:0.4"
                             AutoReverse="True"
                             BeginTime="0:0:0"/>
                            <DoubleAnimation Storyboard.TargetName="Dot2"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-15"
                             Duration="0:0:0.4"
                             AutoReverse="True"
                             BeginTime="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="Dot3"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-15"
                             Duration="0:0:0.4"
                             AutoReverse="True"
                             BeginTime="0:0:0.4"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </StackPanel.Triggers>
        </StackPanel>

    </Grid>
</UserControl>
