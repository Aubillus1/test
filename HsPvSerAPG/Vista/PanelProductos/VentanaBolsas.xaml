<Window x:Class="HsPvSerAPG.Vista.PanelProductos.VentanaBolsas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:HsPvSerAPG.Vista.PanelProductos"
        mc:Ignorable="d"
        Title="Bolsas" Height="200" Width="500" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" Icon="/Utils/Imagenes/logo.png" WindowStartupLocation="CenterScreen">
    <Grid Background="{DynamicResource GradientBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Ingrese cantidad de bolsas:" Foreground="{DynamicResource Text}" FontSize="40" FontFamily="Bahnschrift Condensed" TextAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="80" Height="80" FontFamily="Bahnschrift Condensed" Background="{DynamicResource BtnSalirBackground}" BorderThickness="0" Margin="10" Click="Restar_Click">
                <fa:ImageAwesome Icon="Minus" Foreground="{DynamicResource BtnSalirBorder}"/>
            </Button>
            <TextBox x:Name="TBCantidad" Grid.Column="1" FontSize="80" Text="0" TextAlignment="Center" FontFamily="Bahnschrift Condensed" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10"  Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="4" KeyDown="TBCantidad_KeyDown" PreviewKeyDown="TBCantidad_PreviewKeyDown" TextChanged="TBCantidad_TextChanged"/>
            <Button Grid.Column="2" Width="100" Height="80" FontFamily="Bahnschrift Condensed" Background="{DynamicResource BtnPagoBackground}" BorderThickness="0" Margin="10" Click="Sumar_Click">
                <fa:ImageAwesome Icon="Plus" Foreground="{DynamicResource BtnPagoBorder}" />
            </Button>
        </Grid>
    </Grid>
</Window>
