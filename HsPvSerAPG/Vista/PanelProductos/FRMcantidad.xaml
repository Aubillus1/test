<Window x:Class="HsPvSerAPG.Vista.FRMcantidad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:HsPvSerAPG.Vista"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d" 
        Title="Búsqueda Producto" Height="302" Width="630" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" Icon="/Utils/Imagenes/logo.png"
        WindowStartupLocation="CenterScreen" Background="{DynamicResource GradientBackground}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Primera fila con campos -->
        <Grid Grid.Row="0" Margin="5,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Código -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Label Content="Código :" VerticalAlignment="Center" FontFamily="Bahnschrift Condensed" FontSize="20"/>
                <Border CornerRadius="10" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" Margin="5,0" Width="140">
                    <TextBlock Background="Transparent" Margin="10,0" x:Name="txtCodigo" Grid.ColumnSpan="2" FontSize="24"/>
                </Border>
            </StackPanel>

            <!-- Cantidad -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Label Content="Cant. :" FontSize="24" VerticalAlignment="Center" FontFamily="Bahnschrift Condensed"/>
                <Border CornerRadius="10" Background="{DynamicResource TBTotales}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" Margin="5,0" Width="60">
                    <TextBox x:Name="txtCantidad" Background="Transparent" BorderThickness="0" Grid.Column="3" Margin="5,0" FontSize="26" TextAlignment="Center" KeyDown="txtCantidad_KeyDown" PreviewKeyDown="txtCantidad_PreviewKeyDown" TextChanged="txtCantidad_TextChanged"/>
                </Border>
            </StackPanel>

            <!-- Precio Unitario -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Label Content="P. Uni :" FontSize="24" VerticalAlignment="Center" FontFamily="Bahnschrift Condensed"/>
                <Border CornerRadius="10" Background="{DynamicResource TBTotales}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" Margin="5,0">
                    <TextBox x:Name="txtPrecio" Foreground="{DynamicResource Text}" Width="160" TextAlignment="Right" Margin="10,0" FontSize="28" Background="Transparent" BorderThickness="0" TextChanged="txtPrecio_TextChanged" Cursor=""/>
                </Border>
            </StackPanel>
        </Grid>


        <!-- Descripción del producto -->
        <TextBox Grid.Row="1" IsReadOnly="True" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1" TextWrapping="Wrap"
                 FontWeight="Bold" FontSize="25" Height="85" VerticalAlignment="Top" Margin="5,10" x:Name="txtDescripcion" HorizontalAlignment="Stretch"/>

        <Grid Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Total -->
            <Grid Grid.Column="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Total :" FontFamily="Bahnschrift Condensed" FontSize="40"/>
                <Border Grid.Column="1" CornerRadius="20" Background="{DynamicResource TextBox}" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="2" Height="70" VerticalAlignment="Top">
                    <TextBlock Background="Transparent" FontSize="50" Margin="10,0" x:Name="txtTotal" VerticalAlignment="Center"/>
                </Border>
            </Grid>
            <Button Grid.Column="1" x:Name="btnAceptar" Background="{DynamicResource BotonAceptarBackground}" BorderThickness="0" HorizontalAlignment="Right" Grid.Row="2" Margin="5,10" Width="80" Click="btnAceptar_Click">
                <Grid>
                    <fa:ImageAwesome Icon="Circle" Foreground="{DynamicResource BotonAceptarBorder}" Width="60" Height="60"/>
                    <fa:ImageAwesome Icon="Check" Foreground="{DynamicResource BotonAceptarBackground}" Width="40" Height="40"/>
                </Grid>
            </Button>
            <Button Grid.Column="2" x:Name="btnCancelar" Background="{DynamicResource BtnSalirBackground}" BorderThickness="0" Grid.Row="2" Click="btnCancelar_Click" HorizontalAlignment="Left" Width="80" Margin="5,10">
                <fa:ImageAwesome Icon="TimesCircle" Foreground="{DynamicResource BtnSalirBorder}" Height="60"/>
            </Button>
        </Grid>
    </Grid>
</Window>
