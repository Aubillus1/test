<Window x:Class="HsPvSerAPG.Vista.MostrarImagen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sin Imagen" Height="300" Width="320" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow"
                      Color="Black"
                      BlurRadius="15"
                      ShadowDepth="2"
                      Opacity="0.6"/>
    </Window.Resources>

    <Grid Margin="1" Background="{DynamicResource LinearBackground}">
        <Border BorderBrush="White"
                BorderThickness="3"
                Margin="10"
                Background="White"
                Effect="{DynamicResource DropShadow}"
                ClipToBounds="True">
            <Image x:Name="ImagenPrincipal"
               Stretch="Fill"
               Source="/Utils/Imagenes/1.jpg"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               />
        </Border>
    </Grid>
</Window>
