<Window x:Class="HsPvSerAPG.Emision"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:load="clr-namespace:HsPvSerAPG.Vista.Control_de_Usuario"
        xmlns:local="clr-namespace:HsPvSerAPG"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow"
        Title="Registro de Documento" Height="310" Width="683" Icon="/Utils/Imagenes/logo_pequeño.png" Background="{DynamicResource GradientBackground}">
    <Grid x:Name="GTodo" Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Nro. Serie;" HorizontalAlignment="Left" FontWeight="Bold" FontSize="16"/>

                    <ComboBox x:Name="CMBXnroser" Grid.Row="1" Height="30" FontFamily="Bahnschrift Condensed" FontSize="22" Background="Transparent" BorderThickness="0" VerticalAlignment="Center"/>

                </Grid>
                <Grid Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
               Text="Número de Comprobante:" 
               HorizontalAlignment="Left" 
               FontWeight="Bold" 
               FontSize="16"/>

                    <Border Grid.Row="1" HorizontalAlignment="Stretch" Background="{DynamicResource TextBox}" CornerRadius="5" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}">
                        <TextBlock x:Name="Txtnrodoc" Text="??????????????" HorizontalAlignment="Stretch" FontFamily="Bahnschrift Condensed" FontSize="24" Height="26" Margin="5,0" Background="Transparent" VerticalAlignment="Top"/>
                    </Border>
                </Grid>
                <Grid Grid.Row="2" HorizontalAlignment="Stretch" Margin="0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Vendedor:" HorizontalAlignment="Left" FontWeight="Bold" FontSize="16"/>
                    <ComboBox Grid.Row="1" x:Name="CBVendedor" FontFamily="Bahnschrift Condensed" FontSize="22" HorizontalAlignment="Stretch" Height="28" BorderThickness="0" VerticalAlignment="Top"/>
                </Grid>
                


                <Button Grid.Row="3" x:Name="BtnSalir" Grid.Column="2" Margin="5" Width="120" Background="{DynamicResource BtnSalirBackground}" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Click_BtnSalir">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <fa:ImageAwesome Icon="TimesCircle" Foreground="{DynamicResource BtnSalirBorder}" Width="30" Height="30" Margin="5,10"/>
                        <TextBlock Text="Salir" Foreground="{DynamicResource BtnSalirBorder}" HorizontalAlignment="Center" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
            <Button Grid.Column="1" Margin="5" Width="200" Background="{DynamicResource BtnCurrentBackground}" BorderThickness="0" Click="BtnNotaDeVenta_Click">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <fa:ImageAwesome Icon="FileText" Foreground="{DynamicResource BtnCurrentBorder}" Width="120" Height="120" Margin="0,10"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="NOTA" Foreground="{DynamicResource BtnCurrentBorder}" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20"/>
                        <TextBlock Grid.Row="1" Text="ELECTRONICA" Foreground="{DynamicResource BtnCurrentBorder}" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20"/>
                    </Grid>
                </StackPanel>
            </Button>
            <Button Grid.Column="1" Margin="5" Background="{DynamicResource BtnCurrentBackground}" BorderThickness="0" Click="BtnProforma_Click" Visibility="Collapsed">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <fa:ImageAwesome Icon="FileText" Foreground="{DynamicResource BtnCurrentBorder}" Width="160" Height="160" Margin="0,10"/>
                    <TextBlock Text="PROFORMA" Foreground="{DynamicResource BtnCurrentBorder}" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20"/>
                </StackPanel>
            </Button>
        </Grid>
        <load:EfectoCargar x:Name="Cargar" Visibility="Collapsed"/>
    </Grid>
</Window>
