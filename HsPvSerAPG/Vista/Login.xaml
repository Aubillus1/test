<Window x:Class="HsPvSerAPG.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/" 
        xmlns:faWPF="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        Title="Login"
        Height="416"
        Width="352"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Icon="/Utils/Imagenes/logo_pequeño.png" Background="{DynamicResource  GradientBackground}" >

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever">
                    <DoubleAnimation
                Storyboard.TargetName="ImgRotateTransform"
                Storyboard.TargetProperty="Angle"
                From="0" To="360"
                Duration="0:0:2"
                RepeatBehavior="Forever"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="LoginDesign">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top bar -->
            <RowDefinition Height="*"/>
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom bar -->
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border Grid.Row="0" Background="Transparent" Height="40">
            <Grid x:Name="LogoPanel" HorizontalAlignment="Stretch">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="SlideTransform" />
                </Grid.RenderTransform>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image 
                   Height="25"
                   Width="25"
                   Margin="10,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Stretch="Uniform" Source="/Utils/Imagenes/logo_pequeño.png"
                   RenderTransformOrigin="0.5,0.5">
                        <Image.Effect>
                            <DropShadowEffect Color="Orange" ShadowDepth="0" BlurRadius="8" Opacity="0.8" />
                        </Image.Effect>
                        <Image.RenderTransform>
                            <RotateTransform x:Name="ImgRotateTransform" Angle="0"/>
                        </Image.RenderTransform>
                    </Image>
                    <TextBlock Foreground="White" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold" FontSize="16">
                    Login - HspvSerWPF version 4
                    </TextBlock>
                </StackPanel>
                <ToggleButton Grid.Column="2" x:Name="SwitchTema" Width="40" Height="20" HorizontalAlignment="Center" Margin="10,0" VerticalAlignment="Center" Visibility="Collapsed">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid Width="40" Height="20">
                                <Border x:Name="SwitchBackground" CornerRadius="10" Background="{DynamicResource SwitchTemaBackground}"/>

                                <!-- Icono Luna a la izquierda -->
                                <fa:ImageAwesome x:Name="IconLuna" Icon="MoonOutline" Width="12" Height="12" Margin="2,2,-18,2" Foreground="{DynamicResource SwitchTemaCircle}"/>

                                <fa:ImageAwesome x:Name="IconSol" Icon="SunOutline" Spin="True" SpinDuration="2" Width="12" Height="12" Margin="2,2,22,2" Foreground="{DynamicResource SwitchTemaCircle}"/>

                                <Ellipse x:Name="SwitchKnob" Width="16" Height="16" Fill="{DynamicResource SwitchTemaCircle}" Margin="2,2,22,2"/>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation Storyboard.TargetName="SwitchKnob" Storyboard.TargetProperty="Margin" To="20,2,2,2" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SwitchBackground" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="White" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation Storyboard.TargetName="SwitchKnob" Storyboard.TargetProperty="Margin" To="2,2,20,2" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SwitchBackground" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="Black" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>

                                    <!-- Mostrar sol y ocultar luna cuando está activado -->
                                    <Setter TargetName="IconSol" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="IconLuna" Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
            </Grid>
        </Border>

        <!-- Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Margin="0,5">
                <TextBlock Text="Usuario" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" FontSize="20" Foreground="White" FontFamily="Bahnschrift SemiBold" Margin="0,5"/>
                <Border CornerRadius="12" Width="200" Background="{DynamicResource TextBox}" Height="30" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <fa:ImageAwesome Grid.Column="0" Icon="User" Foreground="{DynamicResource Text2}" Margin="10,0" Width="18"/>
                        <TextBox Grid.Column="1" x:Name="TBUsuarios" FontSize="18" Margin="0,0,15,0" VerticalAlignment="Center" BorderThickness="0" Background="Transparent" KeyDown="Evento_Logear" CharacterCasing="Upper" Foreground="{DynamicResource Text}"/>
                    </Grid>
                </Border>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="3" HorizontalAlignment="Center">
                <TextBlock HorizontalAlignment="Left" Text="Compañia" FontSize="20" FontWeight="Bold" FontFamily="Bahnschrift SemiBold" Foreground="White" Margin="0,5"/>
                <ComboBox x:Name="CBCia" Width="200" FontSize="20" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}" FontFamily="Bahnschrift Condensed"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Margin="0,5">
                <TextBlock Text="Contraseña" FontSize="20" HorizontalAlignment="Left" Foreground="White" FontFamily="Bahnschrift SemiBold" Margin="0,5"/>
                <Border CornerRadius="12" Width="200" Background="{DynamicResource TextBox}" Height="30" BorderBrush="{DynamicResource BordeTextBox}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <fa:ImageAwesome Grid.Column="0" Icon="Lock" Foreground="{DynamicResource Text2}" Margin="10,0" Width="16"/>
                        <PasswordBox Grid.Column="1" x:Name="TBPassword" FontSize="18" KeyDown="Evento_Logear" VerticalAlignment="Center" Background="Transparent" Foreground="{DynamicResource Text}" BorderThickness="0" Margin="0,0,15,0"/>
                    </Grid>
                </Border>
            </StackPanel>
            <Button x:Name="BtnIngresar" Margin="0,15" Background="{DynamicResource BotonAceptarBackground}" BorderBrush="{DynamicResource BotonAceptarBorder}" Width="175" Height="68" FontWeight="Bold" FontSize="20" Click="BtnIngresar_Click" BorderThickness="0">
                <Button.Effect>
                    <DropShadowEffect Color="{DynamicResource BtnAceptarSombra}" ShadowDepth="0" BlurRadius="10" Opacity="0.8" />
                </Button.Effect>
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Grid.Column="0" Foreground="White" Icon="SignIn" Width="38" Height="38" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Foreground="White" Margin="8,0" Text="Ingresar" TextAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>
</Window>