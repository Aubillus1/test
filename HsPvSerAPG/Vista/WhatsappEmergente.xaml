<Window x:Class="HsPvSerAPG.Vista.WhatsappEmergente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:HsPvSerAPG.Vista"
        mc:Ignorable="d"
        Title="Ingresar WhatsApp"
        Height="150" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow" Background="{DynamicResource GradientBackground}">
    <Grid Margin="15,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Etiqueta -->
        <TextBlock Text="Ingrese su número de WhatsApp:" 
                   FontSize="20" 
                   Margin="0,0,0,8" Foreground="{DynamicResource Text}"/>

        <!-- Caja de texto -->
        <Border Grid.Row="1" Height="30" CornerRadius="12" BorderThickness="1" BorderBrush="{DynamicResource BordeTextBox}" Background="{DynamicResource TextBox}">
            <TextBox x:Name="txtNumero" Foreground="{DynamicResource Text}"
                 Background="Transparent" Margin="10,0" BorderThickness="0"
                 FontSize="14"
                 />
        </Border>

        <!-- Botón Aceptar -->
        <Button
                Grid.Row="2" 
                Height="45" Width="150" 
                HorizontalAlignment="Right" 
                Margin="0,15,0,0" Background="{DynamicResource BotonAceptarBackground}" BorderBrush="{DynamicResource BotonAceptarBorder}"
                Click="BtnAceptar_Click">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="CheckCircle" Foreground="{DynamicResource BotonAceptarBorder}" Width="25" Height="25" Margin="5,0"/>
                <TextBlock Text="Aceptar" Foreground="{DynamicResource BotonAceptarBorder}" FontSize="25" FontFamily="Bahnschrift Condensed"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
